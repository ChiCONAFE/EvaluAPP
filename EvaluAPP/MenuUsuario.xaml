<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EvaluAPP.MenuUsuario"
             Title="Menu Usuario">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Exit"
                 Command="{Binding ExitCommand}" />
        <ToolbarItem Text="Add Location"
                 Command="{Binding AddLocationCommand}" />
        <ToolbarItem Text="Edit Location"
                 Command="{Binding EditLocationCommand}" />
        <ToolbarItem Text="Remove Location"
                 Command="{Binding RemoveLocationCommand}" />
        <ToolbarItem Text="Refresh"
                 Command="{Binding RefreshCommand}" />
        <ToolbarItem Text="Change Theme"
                 Command="{Binding ChangeThemeCommand}" />
    </ContentPage.ToolbarItems>
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>